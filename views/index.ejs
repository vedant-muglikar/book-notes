<%- include('partials/header.ejs'); -%>

<!-- Hero Section -->
<section class="hero">
  <p>I read books and share the best insights from them. Here are my notes.</p>
  <form action="/add" method="get">
    <button>Add Book</button>
  </form>
</section>

<!-- Books Library -->
<section id="books" class="books-grid">
  <!-- Sample Book Card -->

  <% for(let book of books){ %> <% let olid = book.olid; %>

  <article class="book-card">
    <img
      src="https://covers.openlibrary.org/b/olid/<%=book.olid%>-L.jpg"
      alt="Book Cover"
      class="book-thumb" />
    <h3 class="book-title"><%= book.title %></h3>
    <p class="rating"><%= book.rating %>/5</p>
    <form action="/view" method="post">
      <button class="view-notes-btn" name="book_id" value="<%= book.id %>">
        View Notes
      </button>
    </form>
  </article>

  <% } %>

  <!-- Add more cards -->
</section>

<%- include('partials/footer.ejs'); -%>
